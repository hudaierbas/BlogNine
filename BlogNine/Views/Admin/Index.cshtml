@model BlogNine.Models.AdminViewModels.IndexViewModel
<div class="container-fluid">
    <h1 class="mt-4">Dashboard</h1>
    
    <div class="row">
        @foreach (var post in Model.Posts)
        {
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-0 shadow">
                    <img src="~/UserFiles/Posts/@post.Id/HeaderImage.jpg" class="card-img-top" alt="" />
                    <div class="card-body">
                        <div class="row " style="margin: 0 auto 10px 0;">
                            <div>
                                <h5 class="card-title mb-0">@post.Title</h5>
                            </div>
                            <div class="nl-auto mr-3">
                                <i class="fas @(post.Published ? "fa-eye" : "fa-eye-slash")" style="color: @(post.Published ? "deepskyblue" : "orangered)")"></i>
                            </div>
                        </div>
                        <div class="row nl-0">
                            <div>
                                <i class="fas fa-calendar-alt" style="color:gray;"></i> Last update on: @post.UpdatedOn
                            </div>
                            <p class="text-muted ml-3 mb-0">@post.Comments.Count() comments</p>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col">
                                <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id" class="btn btn-primary">
                                    <i class="fa fa-arrow-circle-right"></i> View
                                </a>
                            </div>
                            <div class="col">
                                <a asp-controller="Post" asp-action="Edit" asp-route-id="@post.Id" class="btn btn-secondary float-right" style="float:right;">
                                    <i class="fa fa-edit"></i> Edit
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>