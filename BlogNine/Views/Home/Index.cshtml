@model BlogNine.Models.HomeViewModels.IndexViewModel
@using PagedList.Core.Mvc

    <div class="container">
        <form asp-controller="Home" asp-action="Index" class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">
            <div class="input-group mb-3">
                <input asp-for="SearchString" type="text" placeholder="Search posts for..." class="form-control" />
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" style="padding:10px 20px;" >Search</button>
                </div>
            </div>
        </form>
        <div class="row align-content-center">
            @foreach(var post in Model.Posts)
            {
                <div class="col-lg-4 col-md-3 mb-4">
                    <div class="card border-0 shadow">
                        <img src="~/UserFiles/Posts/@post.Id/HeaderImage.jpg" class="card-img-top" />
                        <div class="card-body">
                            <div class="row text-center" style="margin: auto auto 10px 0;">
                                <h5 class="card-title text-center w-100">
                                    <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id">@post.Title</a>
                                </h5>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div list="@Model.Posts" count="6">
            <pager class="pager-container" list="@Model.Posts" options="@PagedListRenderOptions.Bootstrap4PageNumbersPlusPrevAndNext" asp-action="Index" asp-controller="Home" asp-route-query="@Model.SearchString" />
        </div>        
    </div>